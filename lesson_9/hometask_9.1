#include "stdafx.h"
#include <iostream>
#include <time.h>

using namespace std;

template<typename T> T generate_array(T mas[], int size);
template <typename S> S average(S mas, int size);

int _tmain(int argc, _TCHAR* argv[])
{
	srand(time(NULL));
	const int size = 10;
	int imas[size];
	char cmas[size];
	double dmas[size];

	cout << "The initial array is given below: \n\n";
	
	generate_array(imas, size);

	average(imas, size);

	generate_array(cmas, size);
	average(cmas, size);

	generate_array(dmas, size);
	average(dmas, size);

	return 0;
}

template<typename T> T generate_array(T mas[], int size)
{
	for (int i = 0; i < size; i++)
	{
		mas[i] = rand() % 30;
		cout << mas[i] << " ";
	}

	return 0;
}

template <typename S> S average(S mas, int size)
{
	int sum, mas_average;

	sum = 0;

	for (int i = 0; i < size; i++)
	{
		sum += mas[i];
	}

	mas_average = sum / size;

	cout << "The average of the array is " << mas_average << ".\n\n";

	return 0;
}
