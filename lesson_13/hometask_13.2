double calculator(double *pa, double *pb, char *pmode)
{
	if (*pmode == '+')
	{
		return *pa + *pb;
	}
	else if (*pmode == '-')
	{
		return *pa - *pb;
	}
	else if (*pmode == '*')
	{
		return *pa * *pb;
	}
	else if (*pmode == '/')
	{
		return *pa / *pb;
	}
}

