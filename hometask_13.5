#include "stdafx.h"
#include <iostream>

using namespace std;

int _tmain(int argc, _TCHAR* argv[])
{
	int *number = new int;
	int *devider = new int;

	cout << "Enter the number: ";
	cin >> *number;
	cout << "\n\nEnter devider: ";
	cin >> *devider;
	cout << "\n\n";

	if (*devider == 0)
	{
		cout << "Error!!! Devider cannot be 0.\n\n";
	}

	else
	{
		cout << *number << "/" << *devider << " = " << *number / *devider << ".\n\n";
	}
	return 0;
}

